{
  "name": "git-weaver-bot",
  "version": "0.0.0",
  "description": "A modular git bot",
  "engines": {
    "node": "13.5.0"
  },
  "main": "src/index.js",
  "scripts": {
    "format": "prettier --config .prettierrc --write \"src/**/*.{js,ts}\"",
    "lint": "npm run format && tsc --noEmit && eslint \"src/**/*.{js,ts}\" --quiet",
    "lint-fix": "npm run format && tsc --noEmit && eslint \"src/**/*.{js,ts}\" --quiet --fix",
    "test": "jest --forceExit --coverage --verbose",
    "build": "tsc",
    "start": "node build/index.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-node": "nodemon --watch build --exec npm start",
    "watch-ts": "tsc -w",
    "watch-test": "npm run test -- --watchAll"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts,json}": [
      "prettier --config .prettierrc --write",
      "eslint --fix --quiet",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NMFR/git-weaver-bot.git"
  },
  "keywords": [
    "git",
    "bot"
  ],
  "author": "Nuno Rodrigues",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/NMFR/git-weaver-bot/issues"
  },
  "homepage": "https://github.com/NMFR/git-weaver-bot#readme",
  "dependencies": {
    "axios": "^0.19.1",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.1",
    "@types/jest": "^24.0.18",
    "@typescript-eslint/eslint-plugin": "^2.14.0",
    "@typescript-eslint/parser": "^2.14.0",
    "concurrently": "^4.1.2",
    "eslint": "^6.2.2",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "husky": "^3.0.4",
    "jest": "^24.9.0",
    "lint-staged": "^9.2.5",
    "nodemon": "^1.19.1",
    "prettier": "^1.19.1",
    "ts-jest": "^24.0.2",
    "typescript": "^3.7.4"
  }
}
