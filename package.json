{
  "name": "git-weaver-bot",
  "version": "0.0.0",
  "description": "A modular git bot",
  "engines": {
    "node": "12.9.1"
  },
  "main": "src/index.js",
  "scripts": {
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "test": "jest --forceExit --coverage --verbose",
    "build": "tsc",
    "start": "node build/index.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-node": "nodemon build/index.js",
    "watch-ts": "tsc -w",
    "watch-test": "npm run test -- --watchAll"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NMFR/git-weaver-bot.git"
  },
  "keywords": [
    "git",
    "bot"
  ],
  "author": "Nuno Rodrigues",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/NMFR/git-weaver-bot/issues"
  },
  "homepage": "https://github.com/NMFR/git-weaver-bot#readme",
  "dependencies": {
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.1",
    "@types/jest": "^24.0.18",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "concurrently": "^4.1.2",
    "eslint": "^6.2.2",
    "jest": "^24.9.0",
    "nodemon": "^1.19.1",
    "ts-jest": "^24.0.2",
    "typescript": "^3.6.2"
  }
}
